<p id="notice"><%= notice %></p>

<h1>Pessoas</h1>

<table>
  <thead>
    <tr>
      <th>Pes nome</th>
      <th>Pes data cadastro</th>
      <th>Pes data nascimento</th>
      <th>Pes estado</th>
      <th>Pes cidade</th>
      <th>Pes cpf</th>
      <th>Pes genero</th>
      <th>Pes tipo sanguineo</th>
      <th>Pes email principal</th>
      <th>Pes email alternativo</th>
      <th>Pes peso</th>
      <th>Pes altura</th>
      <th>Pes ip</th>
      <th>Pes status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.PES_NOME %></td>
        <td><%= pessoa.PES_DATA_CADASTRO %></td>
        <td><%= pessoa.PES_DATA_NASCIMENTO %></td>
        <td><%= pessoa.PES_ESTADO %></td>
        <td><%= pessoa.PES_CIDADE %></td>
        <td><%= pessoa.PES_CPF %></td>
        <td><%= pessoa.PES_GENERO %></td>
        <td><%= pessoa.PES_TIPO_SANGUINEO %></td>
        <td><%= pessoa.PES_EMAIL_PRINCIPAL %></td>
        <td><%= pessoa.PES_EMAIL_ALTERNATIVO %></td>
        <td><%= pessoa.PES_PESO %></td>
        <td><%= pessoa.PES_ALTURA %></td>
        <td><%= pessoa.PES_IP %></td>
        <td><%= pessoa.PES_STATUS %></td>
        <td><%= link_to 'Show', pessoa %></td>
        <td><%= link_to 'Edit', edit_pessoa_path(pessoa) %></td>
        <td><%= link_to 'Destroy', pessoa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

