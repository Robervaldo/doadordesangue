<div>
	<div class="col-lg-2">
	</div>
	<div class="col-lg-8">
		<div class="bs-example">
			<h1>Cadastro de Doadores</h1>
		</div>
		<div class="well">
			<%= form_for(@cadastro) do |p| %>
				<fieldset>
					<div class="form-group">
						<div class="col-lg-12">
							<% if @cadastro.errors.any? %>
								<div id="error_explanation">
									<h2><%= pluralize(@cadastro.errors.count, "error") %> prohibited this cadastro from being saved:</h2>

									<ul>
										<% @cadastro.errors.full_messages.each do |message| %>
											<li><%= message %></li>
										<% end %>
									</ul>
								</div>
							<% end %>
							
							<span>Não se preocupe! Seus dados não serão exibidos e/ou divulgados.</span><br/>
							<span class="colorRed">* Preenchimento Obrigat&oacute;rio</span>
						</div>
					</div>
					<br/><br/>
					<div class="form-group col-lg-12">
						<label for="nome" class="col-lg-3 control-label">Nome<span class="colorRed">*</span></label>
						<div class="col-lg-8">
							<%= p.text_field :cad_nome, class: "form-control" %>
						</div>
					</div>
					<div class="form-group col-lg-12">
						<label for="dia" class="col-lg-3 control-label">Nascimento<span class="colorRed">*</span></label>
						<%= p.date_select(:cad_data_nascimento, {start_year: (2016-16), end_year: (2016-67), order: [:day, :month, :year], 
							use_month_numbers: true}, {:class => "form-control select-date-ruby"}) %>
					</div>
					<div class="form-group col-lg-12">
						<label for="estado" class="col-lg-3 control-label">
							Estado
						</label>
						<div class="col-lg-3">
							<%= p.select :cad_estado, Estado.all.collect{|e| [e.EST_NOME, e.id]}, {}, {:class => 'form-control'} %>
						</div>
						<label for="cidade" class="col-lg-2 control-label">
							Cidade<span class="colorRed">*</span>
						</label>
						<div class="col-lg-3">
							<div id="divCidade">
								<%= p.select :cad_cidade, Cidade.all.collect{|e| [e.CID_NOME, e.id]}, {}, {:class => 'form-control'} %>
							</div>
						</div>
					</div>
					<div class="form-group col-lg-12">
						<label class="col-lg-3 control-label">
							Genero<span class="colorRed">*</span>
						</label>
						<div class="col-lg-4">
							<%= radio_button("pessoa", "cad_genero", "M") %><span>Masculino&#160;&#160;&#160;</span>
							<%= radio_button("pessoa", "cad_genero", "F") %><span>Feminino&#160;&#160;&#160;</span>
						</div>
					</div>
					
					<div class="form-group col-lg-12">
						<label for="cpf" class="col-lg-3 control-label">
							Tipo Sangu&iacute;neo<span class="colorRed">*</span>
						</label>
						<div class="col-lg-8">
							<%= radio_button("pessoa", "cad_tipo_sanguineo", "A+") %><span>A+&#160;&#160;&#160;</span>
							<%= radio_button("pessoa", "cad_tipo_sanguineo", "A-") %><span>A-&#160;&#160;&#160;</span>
							<%= radio_button("pessoa", "cad_tipo_sanguineo", "O+") %><span>O+&#160;&#160;&#160;</span>
							<%= radio_button("pessoa", "cad_tipo_sanguineo", "O-") %><span>O-&#160;&#160;&#160;</span>
							<%= radio_button("pessoa", "cad_tipo_sanguineo", "B+") %><span>B+&#160;&#160;&#160;</span>
							<%= radio_button("pessoa", "cad_tipo_sanguineo", "B-") %><span>B-&#160;&#160;&#160;</span>
							<%= radio_button("pessoa", "cad_tipo_sanguineo", "AB+") %><span>AB+&#160;&#160;&#160;</span>
							<%= radio_button("pessoa", "cad_tipo_sanguineo", "AB-") %><span>AB-&#160;&#160;&#160;</span>
						</div>
					</div>
					<div class="form-group col-lg-12">
						<label for="email" class="col-lg-3 control-label">
							Email Principal<span class="colorRed">*</span>
						</label>
						<div class="col-lg-8">
							<%= p.text_field :cad_email_principal, class: "form-control" %>
						</div>
					</div>
					<div class="form-group col-lg-12">
						<label for="email" class="col-lg-3 control-label">
							Email Alternativo
						</label>
						<div class="col-lg-8">
							<%= p.text_field :cad_email_alternativo, class: "form-control" %>
						</div>
					</div>
				</fieldset>
				<br/><br/>
				<div class="form-group col-lg-12">
					<div class="col-lg-3">
						<button type="submit" onclick="showCarregando();" class="btn btn-danger">Cadastrar</button> 
					</div>
				</div>
				<br/><br/>
			<% end %>
		</div>
	</div>
	<div class="col-lg-2">
	</div>
</div>